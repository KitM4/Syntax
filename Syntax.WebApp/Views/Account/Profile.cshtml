@using Syntax.WebApp.ViewModels.User
@model UserProfileViewModel

<div class="container">
    <div class="row">

        <div class="col-md-12 mt-3">
            <a asp-controller="Account" asp-action="Edit" class="btn btn-primary">Edit Profile</a>
        </div>
        <div class="col-md-4">
            <img src="@Model.ProfileImageUrl" alt="User Photo" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-8">

            <h2>@Model.UserName</h2>

            <p>@Model.Bio</p>

            <p>Snippets: @Model.SnippetsCount</p>
            <p>Followers: @Model.FollowersCount</p>
            <p>Subscriptions: @Model.SubscriptionsCount</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a asp-controller="Snippet" asp-action="Create" class="btn btn-success">New Snippet</a>
        </div>
    </div>

    <h3>Snippets</h3>
    @foreach (var snippet in Model.Snippets)
    {
        <div class="card">
            <div class="card-header">
                <h5>@snippet.Title</h5>
            </div>
            <div class="card-body">
                <p>@snippet.Content</p>
                <!-- Add more details -->
            </div>
        </div>
    }
</div>